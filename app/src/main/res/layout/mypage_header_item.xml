<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_marginBottom="10dp"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
>

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/profile_resize"
                app:civ_border_color="@color/white"
                app:civ_border_overlay="true"
                app:civ_border_width="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                app:layout_constraintHorizontal_bias="0.05" app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp" app:srcCompat="@drawable/ic_baseline_alarm_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileImage"
                app:layout_constraintEnd_toStartOf="@id/account"
                android:layout_marginTop="30dp"
                android:id="@+id/targetnumber"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toEndOf="@id/targetnumber"
                app:layout_constraintTop_toTopOf="@id/targetnumber"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_baseline_location_on_24"
                android:id="@+id/account"/>

        <TextView
                android:text="TEAMNOVA12"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/profileImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/profileImage"
                android:layout_marginTop="10dp"
                android:id="@+id/name" app:layout_constraintHorizontal_bias="0.07"/>

        <TextView
                android:text="AJW@NAVER.com"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/name"
                app:layout_constraintTop_toBottomOf="@id/name"
                app:layout_constraintStart_toEndOf="@id/profileImage"
                android:id="@+id/tags"/>



</androidx.constraintlayout.widget.ConstraintLayout>